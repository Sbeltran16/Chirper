<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Chirper | Posts</title>
</head>
<body>
    <nav class="navBar">
        <a href="/Chirper/home" <%- title === 'Chirper | Home' ? 'class="active"' : '' %>>Home</a> 
        <a href="/Chirper/create" <%- title === 'Chirper | Create a Post' ? 'class="active"' : '' %>>Create Chirp</a>
    </nav>

    <h1 class="chirperHeader">Chirper</h1>
    <section class="userContent">
        <div><%= posts.userText %></div>
    </section>

    <div>Add A Comment</div>
    <form id="commentForm" action="/Chirper/<%= posts._id %>/post" method="POST">
        <textarea name="userComment" placeholder="Add a Comment"></textarea>
        <input type="submit" value="Add Comment">
    </form>

        
    <% comments.forEach(function(c){ %>
        <div id="userComment">
        <%= c.userComment %>
        </div>
    <% }); %>  
    
</body>
</html>