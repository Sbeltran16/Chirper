<%- include('../partials/header') %>

    <h1 class="chirperHeader">Chirper</h1>
    <section class="userContent">
        <div>
            <%= posts.userText %><br><br>
            <%= posts.createdAt%>
        </div>

        <% if (user) { %>
            <form action="/Chirper/<%= posts._id %>?_method=DELETE" method="POST">
              <button class="postButton" type="submit">Delete Chirp</button>
            </form>
          <% } %>
    </section>

    <% if(user) { %>
        <h2 class="headerTwo">Add A Comment</h2>
        <form class="form-for-post"  method="POST" action="/Chirper/<%= posts._id %>/post">
            <textarea id="commentForm" name="userComment" rows="5" cols="40" placeholder="Add a Comment"></textarea>
            <input class="postButton" type="submit" value="Add Comment">
        </form>
    <% } %> 
        <% if(comments.length) { %>
        <% let total = 0 %>
            <% comments.forEach(function(c){ %>
                <div id="userComment">
                <%= c.userComment %>
                </div>
        <% }); %> 
        <% } else { %>
            <h5 class="noPosts">No Comments Yet</h5>
        <% } %> 
</body>
</html>